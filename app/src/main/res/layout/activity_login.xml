<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_StatuBar_Height">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"/>
            <EditText
                android:id="@+id/et_phonenum"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorRed"
                android:paddingLeft="10dp"
                android:hint="请输入手机号或邮箱"/>
            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorRed"
                android:paddingLeft="10dp"
                android:hint="请输入密码"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorRed"
                    android:paddingLeft="10dp"
                    android:hint="请输入验证码"/>
                <Button
                    android:id="@+id/btn_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="获取验证码"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_accountLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快捷登录"/>
            <EditText
                android:id="@+id/et_qphoneNum"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorRed"
                android:paddingLeft="10dp"
                android:hint="手机号"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_phonewCode"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:textColorHint="@color/colorWhite"
                    android:textColor="@color/colorRed"
                    android:paddingLeft="10dp"
                    android:hint="请输入验证码"/>
                <Button
                    android:id="@+id/btn_pgetcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="获取验证码"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_quickLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="快捷登录"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号登录"/>
            <EditText
                android:id="@+id/et_aphoneNum"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorRed"
                android:paddingLeft="10dp"
                android:hint="手机号"
                android:text="18726903133"/>

            <EditText
                android:id="@+id/et_accountpwd"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorRed"
                android:paddingLeft="10dp"
                android:hint="请输入密码"
                android:text="123456"/>
            <Button
                android:id="@+id/btn_accountLogin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账号登录"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
